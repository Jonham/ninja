$color-background = #fff
$color-border-light = #ccc
$color-border-medium = #999
$color-foreground = #333
$color-highlight-background = rgba(0,0,0,0.2)
$color-highlight-foreground = rgba(255,255,255,0.95)

.ninja-list,
.ninja-popup {
  background-color: $color-background;
  border: 1px solid $color-border-light;
  border-radius: 4px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.2);
  color: $color-foreground;
  > .ninja-point-down {
    border-top-color: $color-border-light;
    &::before {
      border-top-color: $color-background;
    }
  }
  > .ninja-point-up {
    border-bottom-color: $color-border-light;
    &::before {
      border-bottom-color: $color-background;
    }
  }
}

.ninja-list {
  > .ninja-item {
    padding: 4px 24px;
    &.ninja-first {
      border-radius: 4px 4px 0 0;
    }
    &:last-child {
      border-radius: 0 0 4px 4px;
    }
    &:hover,
    &.ninja-hover {
      background-color: $color-highlight-background;
      color: $color-highlight-foreground;
    }
  }
  > .ninja-rule {
    border-top: 1px solid $color-border-light;
  }
}

.ninja-menu {
  color: $color-foreground;
  display: inline-block;
  padding: 4px 12px;
  vertical-align: middle;
  &:hover,
  &.ninja-select {
    border-radius: 4px;
  }
  &:hover {
    background-color: rgba(0,0,0,0.05);
  }
  &.ninja-select {
    background-color: $color-highlight-background;
    color: $color-highlight-foreground;
    > .ninja-arrow-down {
      border-top-color: $color-highlight-foreground;
    }
  }
  img {
    vertical-align: middle;
  }
  > .ninja-arrow-down {
    border-top-color: $color-foreground;
  }
}
