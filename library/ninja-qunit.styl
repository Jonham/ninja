$fail = #c33;
$pass = #6c6;
$normal = #ccc;
$subtle = #666;

#qunit-ninja {
  background: #111 no-repeat linear-gradient(#222, #111);
  color: $normal;
  font: 12px/16px "Lucida Grande", sans-serif;
  margin: 0 auto;
  max-width: 1024px;
  min-width: 800px;
  padding: 24px;
  position: relative;

  #qunit-examples {
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 4px;
    color: #333;
    padding: 24px;
    position: relative;
  }

  #qunit-header {
    font-size: 24px;
    line-height: 1;
    margin: 0;
    > a {
      color: $normal;
      text-decoration: none;
      &:hover {
        color: $normal;
        text-decoration: underline;
      }
    }
  }

  #qunit-testresult {
    font: 12px/12px "Menlo", monospace;
    margin: 0;
    position: absolute;
    right: 24px;
    top: 20px;
    br {
      content: '';
    }
    span {
      &:before {
        content: ' ';
      }
      &.failed {
        color: $fail;
      }
      &.passed {
        color: $pass;
      }
    }
    .module-name {
      font-weight: bold;
    }
  }

  #qunit-testrunner-toolbar {
    position: absolute;
    right: 24px;
    top: 40px;
    input {
      font: inherit;
      margin: 0 6px 0 24px;
    }
    label {
      display: inline-block;
    }
  }

  #qunit-banner {
    height: 1px;
    margin: 24px 0;
    &.qunit-fail{
      background-color: $fail;
    }
    &.qunit-pass {
      background-color: $pass;
    }
  }

  #qunit-tests {
    color: $subtle;
    font: 12px/24px "Menlo", monospace;
    list-style-position: inside;
    padding: 0;
    &.hidepass {
      li.pass,
      li.running {
        display: none;
      }
    }
    b.counts {
      font-weight: normal;
      b {
        font-weight: normal;
      }
    }
    li {
      &.fail {
        span.test-message {
          color: $fail;
        }
        strong {
          color: $fail;
          b.counts {
            b.failed {
              color: $fail;
            }
          }
        }
      }
      &.pass {
        b.passed {
          color: $pass;
        }
        span.test-message {
          color: $pass;
        }
        strong {
          color: $normal;
        }
      }
      a,
      strong {
        &:hover {
          text-decoration: underline;
        }
      }
      a {
        color: $subtle;
        margin-left: 6px;
        text-decoration: none;
        &:hover {
          color: $normal;
        }
      }
      b.counts {
        color: $subtle;
      }
      strong {
        font-weight: normal;
        &:hover {
          cursor: pointer;
        }
      }
    }
    ol {
      list-style-position: inside;
      padding: 0 0 0 22px;
      li {
        table {
          border-collapse: collapse;
          th,
          td {
            padding: 0;
            vertical-align: top;
          }
          th {
            font-weight: normal;
          }
          td {
            pre {
              background-color: #222;
              border-radius: 4px;
              color: $normal;
              font: inherit;
              margin: 0 0 0 12px;
              padding: 12px 12px 12px 0;
              white-space: pre-wrap;
              word-wrap: break-word;
            }
          }
        }
      }
    }
  }

  #qunit-userAgent {
    color: $subtle;
    font: 9px/9px "Menlo", monospace;
  }

  #qunit-fixture {
    position: absolute;
    height: 768px;
    left: -1024px;
    top: -768px;
    width: 1024px;
  }
}

div#qunit-ninja {
  border: 1px solid #000;
  border-radius: 8px;
}
