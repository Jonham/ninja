@charset 'UTF-8';

.ninja-arrow-down,
.ninja-arrow-up {
  border-right: 4px solid transparent;
  border-left: 4px solid transparent;
  display: inline-block;
  vertical-align: middle;
}

.ninja-arrow-down {
  border-top: 5px solid;
}

.ninja-arrow-up {
  border-bottom: 5px solid;
}

.ninja-list {
  position: absolute;
  z-index: 6;
}

.ninja-list {
  left: 0;
  min-width: 100%;
  > li {
    display: block;
    white-space: nowrap;
  }
}
