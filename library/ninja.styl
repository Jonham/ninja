@charset 'UTF-8';

$color-background = #fff
$color-border-medium = #999
$color-border-light = #ccc
$color-highlight-background = #06c
$color-highlight-foreground = #fff

.nui-arw-dwn,
.nui-arw-up {
  border-right: 4px solid transparent;
  border-left: 4px solid transparent;
  display: inline-block;
  vertical-align: middle;
}

.nui-arw-dwn {
  border-top: 5px solid;
}

.nui-arw-up {
  border-bottom: 5px solid;
}

.nui-lst {
  background-color: $color-background;
  border: 1px $color-border-medium;
  border-radius: 4px;
  border-style: solid none;
  box-shadow: 0 0 12px rgba(0,0,0,0.5);
  left: 0;
  position: absolute;
  min-width: 100%;
  z-index: 8;
  > .nui-opt {
    border-left: 1px solid $color-border-medium;
    border-right: 1px solid $color-border-medium;
    display: block;
    padding: 2px 8px;
    white-space: nowrap;
    &.nui-fst {
      border-radius: 4px 4px 0 0;
    }
    &:last-child {
      border-radius: 0 0 4px 4px;
    }
    &:hover,
    &.nui-hvr {
      background-color: $color-highlight-background;
      color: $color-highlight-foreground;
    }
  }
  > hr.nui-opt {
    border: none;
    border-top: 1px solid $color-border-light;
    margin: 0;
    padding: 0;
  }
  > a.nui-opt {
    color: inherit;
    text-decoration: none;
  }
}
